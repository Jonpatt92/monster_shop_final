<%= form_for @user do |user_form| %>
  <%= user_form.label :name %>
  <%= user_form.text_field :name %>

  <%= user_form.label :email %>
  <%= user_form.email_field :email %>

  <%= user_form.label :password %>
  <%= user_form.password_field :password %>

  <%= user_form.label :password_confirmation %>
  <%= user_form.password_field :password_confirmation %>

    <%= fields_for :address do |address_fields| %>
      Address: <%= address_fields.text_field :street_address %>

      City: <%= address_fields.text_field :city %>

      State: <%= address_fields.text_field :state %>

      Zip: <%= address_fields.text_field :zip %>

      Nickname: <%= address_fields.text_field :nickname %>

    <% end %>

  <%= user_form.submit 'Register' %>
<% end %>
